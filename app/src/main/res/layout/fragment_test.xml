<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D890E4"
        android:weightSum="100"
        android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tests_list_header_font_size"
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:layout_margin="5dp"
        android:text="@string/tests_list_item_icon_placeholder"/>

</FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/test_button1"
                android:layout_width="@dimen/play_button_padding_top"
                android:layout_height="@dimen/test_item_height"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/tests_list_item_margin"
                android:layout_marginLeft="@dimen/tests_list_item_margin"
                android:layout_weight=".50"
                android:contentDescription="@string/test_variant_placeholder" />

            <ImageView
                android:id="@+id/test_button2"
                android:layout_width="@dimen/play_button_padding_top"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/tests_list_item_margin"
                android:layout_height="@dimen/test_item_height"
                android:layout_marginLeft="@dimen/tests_list_item_margin"
                android:layout_weight=".50"
                android:contentDescription="@string/test_variant_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tests_list_item_margin"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tests_list_item_margin"
            android:layout_weight="50">

            <ImageView
                android:layout_width="@dimen/play_button_padding_top"
                android:layout_height="@dimen/test_item_height"
                android:visibility="invisible"
                android:id="@+id/test_button3"
                android:layout_marginRight="@dimen/tests_list_item_margin"
                android:layout_marginLeft="@dimen/tests_list_item_margin"
                android:layout_weight=".50"
                android:contentDescription="@string/test_variant_placeholder"/>

            <ImageView
                android:layout_width="@dimen/play_button_padding_top"
                android:id="@+id/test_button4"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/tests_list_item_margin"
                android:layout_height="@dimen/test_item_height"
                android:layout_marginLeft="@dimen/tests_list_item_margin"
                android:layout_weight=".50"
                android:contentDescription="@string/test_variant_placeholder"/>
        </LinearLayout>
    </LinearLayout>
</layout>