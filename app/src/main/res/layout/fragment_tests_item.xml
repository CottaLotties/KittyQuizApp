<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/tests_list_item_shape"
    android:layout_margin="@dimen/tests_list_item_margin">

    <ImageView
        android:id="@+id/item_icon"
        android:contentDescription="@string/tests_list_item_icon_placeholder"
        android:layout_width="@dimen/tests_list_item_icon_size"
        android:layout_height="@dimen/tests_list_item_icon_size"
        android:layout_margin="@dimen/text_margin"
        android:padding="@dimen/tests_list_item_margin" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>